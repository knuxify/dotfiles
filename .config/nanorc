# knux's nanorc

set tabsize 4
set smooth
set softwrap
set linenumbers
unset mouse
set atblanks
set showcursor
set nohelp
set morespace
set constantshow
set zap
set wordbounds
set positionlog
set afterends

set minibar

# keybindings
bind ^X exit all
bind ^S savefile all
bind ^F whereis all
bind ^C cancel all
bind ^C copy main
bind ^K cut all
bind ^V paste all
bind ^L linter all
bind ^Z undo all
bind ^Y redo all
bind M-U undo all
bind M-Y redo all

# colors
set titlecolor normal,normal
set statuscolor normal,normal
set stripecolor normal,normal
set selectedcolor mint,normal
set functioncolor normal,normal
set keycolor normal,normal
set errorcolor brightred
set numbercolor ,normal

include /usr/share/nano/*
